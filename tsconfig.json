{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "projects/uae-fms/src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "esnext",
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@core/*": ["./app/core/*"],
      "@shared/*": ["./app/shared/*"],
      "@models/*": ["./app/models/*"],
      "@feature/*": ["./app/feature/*"],
      "@environments/*": ["./environments/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
